<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">


        # Title image
    <ImageView
        android:id="@+id/image_title_locations"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/app_mockup___main_screen_image_title"></ImageView>


        # Header text for Where to Watch screen
    <TextView
        android:id="@+id/text_where_to_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special_elite"
        android:text="@string/text_where_to_watch"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/light_grey"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_title_locations" />


        # Button to return to the main menu
    # TODO: Add button functionality to return to main menu
    <Button
        android:id="@+id/button_main_menu_where"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:text="@string/button_main_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_2_info" />


        # Text for the first location's name,
        # date and time for showing, and
        # information about location
    <TextView
        android:id="@+id/text_location_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/special_elite"
        android:text="@string/text_location_1"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/light_grey"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_where_to_watch" />

    <TextView
        android:id="@+id/text_location_1_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special_elite"
        android:text="@string/text_location_1_date_time"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/light_grey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_1" />

    <TextView
        android:id="@+id/text_location_1_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/special_elite"
        android:text="@string/text_location_1_info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/light_grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_1_date_time" />


    # Text for the second location's name,
    # date and time for showing, and
    # information about location
    <TextView
        android:id="@+id/text_location_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/special_elite"
        android:text="@string/text_location_2"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/light_grey"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_1_info" />

    <TextView
        android:id="@+id/text_location_2_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special_elite"
        android:text="@string/text_location_2_date_time"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/light_grey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_2" />

    <TextView
        android:id="@+id/text_location_2_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/special_elite"
        android:text="@string/text_location_2_info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/light_grey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_location_2_date_time" />

</androidx.constraintlayout.widget.ConstraintLayout>